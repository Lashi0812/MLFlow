name: Pipeline
conda_env: conda.yaml

entry_points:
  main:
    parameters:
      pipeline_steps:
        type: str
        default: all
    command: "python main.py --steps {pipeline_steps}"

  download_data:
    parameters:
      download_url:
        type: str
        default: https://pl-flash-data.s3.amazonaws.com/imdb.zip
      
      local_folder:
        type: str
        default: ../data/

    command: "python pipeline/download_data.py --download_url {download_url} --local_folder {local_folder}"
    
  finetune_model:
    parameters:
      foundation_model:
        type: str
        default: prajjwal1/bert-tiny
      finetune_strategy:
        type: str
        default: freeze
      data_path:
        type: str
        default: ../data/
      
    command: 
      "python pipeline/finetune_model.py \
      --foundation_model {foundation_model} \
      --finetune_strategy {finetune_strategy} \
      --data_path {data_path}"

  register_model:
    parameters:
      mlflow_run_id:
        type: str
        default: None
      registered_model_name:
        type: str
        default: finetune_model
    command:
      "python pipeline/register_model.py --mlflow_run_id {mlflow_run_id} \
      --registered_model_name {registered_model_name}"

      
python pipeline/register_model.py --mlflow_run_id 3c102fd801b345f9a528c55c46c8fdf8 --registered_model_name finetune_model
      